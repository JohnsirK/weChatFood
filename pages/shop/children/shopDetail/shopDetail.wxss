/* pages/shop/children/shopDetail/shopDetail.wxss */
.topImg {
  background: #fff;
  box-shadow: 0 4rpx 20rpx rgba(100, 100, 100, .06);
}
.topImg swiper {
  height: 540rpx;
}
.topImg swiper image {
  width: 100%;
  height: 100%;
  display: block;
}
.shopDetail, .reply {
  padding: 20rpx;
  background: #fff;
  margin-top: 30rpx; 
  box-shadow: 0 4rpx 20rpx rgba(100, 100, 100, .2);
}
.shopDetail .h4 {
  display: flex;
  align-items: center;
}
.shopDetail .h4 .right {
  margin-left: auto;
  display: flex;
  align-items: center;
}
.shopDetail .h4 .right text{
  padding: 6rpx 10rpx;
  font-size: 24rpx;
  border-radius: 4rpx;
}
.shopDetail .h5 {
  color: #666;
  font-size: 28rpx;
  margin: 10rpx 0;
  display: flex;
  align-items: center;
} 
.shopDetail .h5 text {
  color: #f60;
  
}
.shopDetail .h6 {
  color: #999;
  font-size: 24rpx;
}
.reply .title {
  display: block;
  border-bottom: 2rpx solid #f1f1f1;
  padding-bottom: 20rpx;
}
.reply .noReply {
  padding: 20rpx 0;
  color: #999;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.reply .noReply van-icon {
  margin-right: 10rpx;
}