/* pages/allCity/allCity.wxss */
.list {
  background: #fff;
  overflow: hidden;
}
.list .title {
  border-bottom: 2rpx solid #f1f1f1;
  padding: 20rpx;
  font-size: 32rpx;
  color: #333;
}
.list .title .topName {
  color: #999;
  margin-left: 10rpx;
  font-size: 24rpx;
}
.list .li {
  width: 25%;
  box-sizing: border-box;
  border-right: 2rpx solid #f1f1f1;
  border-bottom: 2rpx solid #f1f1f1;
  display: block;
  float:left;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.list .li:nth-child(4n + 1) {
  border-right: none
}
.hot {
  overflow: hidden;
}
.hot .title {
  background: #f3f3f3;
  padding: 10rpx 30rpx;
  font-size: 32rpx;
  color: #333;
}
.hot .title .topName {
  color: #999;
  margin-left: 10rpx;
  font-size: 24rpx;
}
.hot .li {
  width: 100%;
  box-sizing: border-box;
  display: block;
  text-align: left;
  padding: 16rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  background: #fff;
  border-bottom: 2rpx solid #f4f5f7;
}
.hot .li:nth-child(4n + 1) {
  border-right: none
}
.list .li {
  color: #3190e8
}
.rightFix {
  position: fixed;
  right: 10rpx;
  top:12%;
  background: rgba(0, 0, 0, .3);
  width: 40rpx;
  height: 76%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 9;
  border-radius: 10rpx;
}
.rightFix text {
  color: #fff;
  padding: 4rpx 0;
  font-size: 24rpx;
}
.bigIndex {
  background: rgba(100, 100, 100, .6);
  width: 200rpx;
  height: 200rpx;
  position: fixed;
  margin: auto;
  top:0;
  left:0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
}
.bigIndex text {
  color: #fff;
  font-size: 60rpx;
}
.rightFix text.cur {
  color: #ef751c
}