/* pages/citySearch/citySearch.wxss */
page {
  background: #zazaza;
}
.citySearch {
  display: flex;
  background: #3190e8;
  padding: 20rpx;
  align-items: center;
  color: #fff;
}
.searLeft {
  max-width: 200rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.searLeft .address {
  font-size: 28rpx;
  margin: 0 5rpx 0 10rpx;
}
.searLeft .icon-down {
  font-size: 24rpx;
}
.searchInput {
  margin: 0 10rpx;
  width: calc(100% - 280rpx);
  position: relative;
}
.searchInput input {
  font-size: 28rpx;
  background: #fff;
  border-radius: 30rpx;
  padding: 10rpx 20rpx 10rpx 60rpx;
  width: 100%;
  color: #666;
}
.searchInput text {
  position: absolute;
  color: #999;
  font-size: 28rpx;
  top: 50%;
  margin-top: -16rpx;
  display: flex;
  align-items: center;
  left: 20rpx;
}
.searchBtn {
  margin-left: auto;
  font-size: 28rpx;
}
.searchHistory {
  box-shadow: 0 4rpx 20rpx rgba(100, 100, 100, .1);
}
.searchHistory .title {
  display: block;
  padding: 10rpx 20rpx;
  font-size: 28rpx; 
}
.searchHistory .li {
  background: #fff;
  display: flex;
  padding: 30rpx;
  align-items: center;
  border-bottom: 2rpx solid #f3f3f3;
}
.searchHistory .li:last-child, .searchEnd .li:last-child {
  border-bottom: 0;
}
.searchHistory .li .iconfont {
  font-size: 40rpx;
  color: #3190e8;
  width: 60rpx;
}
.searchHistory .li .txt {
  margin-left: 10rpx;
  width: calc(100% - 60rpx)
}
.searchHistory .txt .h4, .searchEnd .li .h4 {
  color: #333;
  font-size: 28rpx;
}
.searchHistory .txt .h5, .searchEnd .li .h5 {
  color: #999;
  margin-top: 6rpx;
  font-size: 24rpx;
}
.searchEnd .li {
  border-bottom: 2rpx solid #f3f3f3;
}
.searchEnd {
  background: #fff;
  padding: 0 30rpx;
}
.searchEnd .li {
  padding: 30rpx 0;
}
.clearAll {
  padding: 20rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #bfbfbf;
  font-size: 28rpx;
}
.clearAll .iconfont {
  margin-right: 10rpx;
}