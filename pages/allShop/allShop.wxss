/* pages/allShop/allShop.wxss */
.fixedTop {
  background: #e0ebf7;
  height: 80rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  color: #333;
  padding: 0 30rpx;
  position: fixed;
  top:0;
  left:0;
  width: 100%;
  box-shadow: 0 4rpx 20rpx rgba(195, 195, 195, .6);
  z-index: 9;
  font-size: 28rpx;
}
.fixedTop .right {
  margin-left: auto
}
.main {
  overflow: hidden;
}
.chooseList {
  position: fixed;
  top: -200px;
  left:0;
  opacity: 0;
  width: 100%;
  background: #fff;
  box-shadow: 0 4rpx 20rpx rgba(195, 195, 195, .6);
  z-index: 8;
  padding: 20rpx 0;
}
.chooseList .li {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  display: flex;
  align-items: center;
}
.chooseList .li text.okIndex {
  margin-left: auto;
  color: #c41106;
  font-size: 32rpx;
}
.bg0 {
  background: rgba(0, 0, 0, .6);
  width: 100%;
  height: 100%;
  position: fixed;
  top:0;
  left: 0;
  z-index: 7;
}
#listData {
  margin-top: 80rpx;
}